{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FM26 Mod Manifest",
  "type": "object",
  "required": ["name", "version", "files"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "type": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "homepage": {
      "type": "string",
      "format": "uri"
    },
    "description": {
      "type": "string"
    },
    "compatibility": {
      "type": "object",
      "properties": {
        "game": {
          "type": "string"
        },
        "min_build": {
          "type": "string"
        },
        "max_build": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "conflicts": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "load_after": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "license": {
      "type": "string"
    },
    "files": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["source", "target_subpath"],
        "properties": {
          "source": {
            "type": "string",
            "minLength": 1
          },
          "target_subpath": {
            "type": "string",
            "minLength": 1
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
